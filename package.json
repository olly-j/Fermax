{
  "name": "homebridge-fermax-blue",
  "version": "0.1.2",
  "description": "Homebridge platform plugin that bridges Fermax Blue / DuoxMe doorbells into HomeKit with doorbell, lock, and video feed.",
  "main": "src/index.js",
  "type": "commonjs",
  "files": [
    "src",
    "config.schema.json",
    "README.md",
    "LICENSE",
    "verify-install.js",
    "postinstall.js"
  ],
  "scripts": {
    "test": "jest --config jest.config.js",
    "setup": "node src/setup/cli.js",
    "postinstall": "node postinstall.js"
  },
  "keywords": [
    "homebridge-plugin",
    "fermax",
    "doorbell",
    "homekit",
    "duox"
  ],
  "author": "Oliver Jeffers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olly-j/Fermax.git"
  },
  "bugs": {
    "url": "https://github.com/olly-j/Fermax/issues"
  },
  "homepage": "https://github.com/olly-j/Fermax#readme",
  "engines": {
    "node": ">=18.0.0",
    "homebridge": ">=1.6.0"
  },
  "homebridge": {
    "platforms": [
      {
        "platform": "FermaxBluePlatform",
        "plugin_map": {
          "plugin_name": "homebridge-fermax-blue"
        }
      }
    ]
  },
  "dependencies": {
    "@homebridge/camera-utils": "^1.0.0",
    "push-receiver-v2": "^2.2.0"
  },
  "peerDependencies": {
    "hap-nodejs": ">=1.0.0",
    "homebridge": ">=1.6.0"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "hap-nodejs": "^0.11.2",
    "homebridge": "^1.6.1",
    "jest": "^29.7.0"
  }
}